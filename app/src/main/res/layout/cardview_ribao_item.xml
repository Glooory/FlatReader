<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="@dimen/z_card"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_default">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_card_ribao_item"
            android:layout_width="@dimen/ribao_item_image_width"
            android:layout_height="@dimen/ribao_item_image_height"
            android:layout_marginLeft="8dp"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:viewAspectRatio="1.33" />

        <TextView
            android:id="@+id/tv_ribao_item_title"
            style="@style/ribao_item_title_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</android.support.v7.widget.CardView>